@model IEnumerable<SampleWebWidMVC.Models.BooksModel>

    @{
        ViewData["Title"] = "Index";
    }

    <div class="parent-container d-flex">
        <div class="container">
            <div class="row">
                <div class="col">
                    <div class="col-lg-12">
                        <div class="card" style="width: 65rem;">
                            <div class="card-body">
                                <section>
                                    <div class="form-row">

                                        <div class="col form-group col-lg-2">
                                            <a class="btn btn-primary btn-sm" style="width:160px; color:white;"><i class="fa fa-sync"></i> Get Books</a>

                                        </div>
                                        <div class="col form-group">
                                            <a asp-action="Create"  class="btn btn-secondary btn-sm" style="width:160px;color:white;"><i class="fa fa-plus" aria-hidden="true"></i>   Create New</a>
                                        </div>
                                        <div class="col-lg-12">
                                            <table class="table table-striped table-hover">
                                                <thead>
                                                    <tr><th> @Html.DisplayNameFor(model => model.Title)</th>
                                                       
                                                        <th>
                                                            @Html.DisplayNameFor(model => model.Author)
                                                        </th>
                                                        <th>
                                                            @Html.DisplayNameFor(model => model.Publisher)
                                                        </th>
                                                        <th>
                                                            @Html.DisplayNameFor(model => model.Category)
                                                        </th>
                                                        <th>
                                                            @Html.DisplayNameFor(model => model.Price)
                                                        </th>
                                                        
                                                        <th>Action</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @foreach (var item in Model)
                                                    {
                                                    <tr>

                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.Title)
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.Author)
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.Publisher)
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.Category)
                                                        </td>

                                                        <td>
                                                            $ @Html.DisplayFor(modelItem => item.Price)
                                                        </td>
                                                        <td>
                                                            <a asp-action="Edit" asp-route-id="@item.ID">
                                                                <i class="fa fa-edit"></i>
                                                            </a> |
                                                            <a asp-action="Delete" asp-route-id="@item.ID">
                                                                <i class="fa fa-trash"></i> 
                                                            </a>
                                                        </td>
                                                    </tr>
                                                    }
                                                </tbody>
                                            </table>


                                        </div>
                                    </div>

                                </section>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div><p></p>
    <hr />



